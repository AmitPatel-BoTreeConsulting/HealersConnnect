- @registration_donation ||= RegistrationDonation.new
- text_field_class = 'col-xs-10 col-sm-5'

= form_for @registration_donation, url: workshop_registration_registration_donations_path, html: { class: 'form-horizontal', role: 'form'} do |f|
  = render partial: 'shared/error_messages', locals: { target: @registration_donation }
  .row
    .col-xs-12
      .spacer10
      .form-group
        %label.col-sm-3.control-label.no-padding-right
          = t('registration.caption.payment_by')
        %label.col-sm-1.text-left
          %strong
            Cash
      .space-4
      .form-group
        %label.col-sm-3.control-label.no-padding-right
          = t('registration_donation.caption.amount')
        .col-sm-9
          = f.text_field :amount, class: text_field_class
      .space-4
      .form-group
        %label.col-sm-3.control-label.no-padding-right
          = t('registration_donation.caption.description')
        .col-sm-9
          = f.text_area :description, rows: 4, cols: 10, class: text_field_class
      .space-4
      .form-group
        %label.col-sm-3.control-label.no-padding-right= t('registration_donation.caption.received_on')
        .col-sm-3
          .input-group
            = f.text_field :received_on, placeholder: t('donation.caption.placeholder_date'), class: 'form-control date-picker', id: 'id-date-picker-1', value: date_formatted(Date.today)
            %span.input-group-addon
              %i.icon-calendar.bigger-110
      .space-4

      .spacer10
      .clearfix
        .col-md-offset-3.col-md-9
          = f.submit t('registration_donation.caption.button.create'), class: "#{registration_submit_button_class}", id: 'register'
          = link_to t('common.caption.button.cancel'), workshop_registrations_path(@workshop), class: 'btn', title: t('common.caption.button.cancel')


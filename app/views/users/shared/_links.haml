- if controller_name != 'sessions'
  = link_to t('common.caption.sign_in'), new_session_path(resource_name)
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords'
  = link_to(new_password_path(resource_name), class: 'forgot-password-link', title: t('common.caption.link.forgot_my_password')) do
    %i.icon-arrow-left
    = t('common.caption.link.forgot_my_password')
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to t('common.caption.link.confirmation_instructions'), new_confirmation_path(resource_name)
  %br/
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to t('common.caption.link.unlock_instructions'), new_unlock_path(resource_name)
  %br/
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider)
    %br/

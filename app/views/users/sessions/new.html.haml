.row
  .col-sm-10.col-sm-offset-1
    .login-container
      .center
        .spacer75
        / %h1
        /   %span.white= t('header.title')
      .space-6
      .position-relative
        #login-box.login-box.visible.widget-box.no-border
          .widget-body
            .widget-main
              %h4.header.blue.lighter.bigger
                Sign In
              .space-6
              = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
                = render partial: 'shared/flash_messages'
                %fieldset
                  %label.block.clearfix
                    %span.block.input-icon.input-icon-right
                      = f.text_field :email, autofocus: true, placeholder: "Username or Email", class: "form-control"
                      %i.icon-user
                  %label.block.clearfix
                    %span.block.input-icon.input-icon-right
                      = f.password_field :password, class: "form-control", placeholder: "Password"
                      %i.icon-lock
                  .space
                  .clearfix
                    %label.inline
                      - if devise_mapping.rememberable?
                        = f.check_box :remember_me, class: "ace"
                        %span.lbl
                          Remember Me
                    = button_tag(type: "submit", class: "width-35 btn btn-sm btn-primary no-radius pull-right") do
                      Login
            / /widget-main
            .toolbar.clearfix
              %div
                = render "users/shared/links"
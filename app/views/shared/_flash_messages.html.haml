- unless flash.empty?
  .row.flash_msg
    - flash.each do |name, message|
      %div{ class: "text-center alert #{render_css_class(name,:css_class)}" }
        %button.close{'data-dismiss' => 'alert', type: 'button'} &times;
        %i{ class: "#{render_css_class(name,:msg_icon)}" }
        = message

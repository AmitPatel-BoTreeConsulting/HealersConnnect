- text_field_class = 'col-xs-4 margin-right-10'
= form_for @donation, html: { class: 'form-horizontal', role: 'form'} do |f|
  = hidden_field_tag 'donation[user_id]', current_user.id
  = render partial: 'shared/error_messages', locals: { target: @donation }
  .row
    .col-xs-12
      .form-group
        %label.col-xs-3.col-sm-3.control-label.no-padding-right Donor Name
        .col-sm-9
          = f.text_field :donor_name, class: text_field_class
      .form-group
        %label.col-sm-3.control-label.no-padding-right Donor Email
        .col-sm-9
          = f.text_field :donor_email, class: text_field_class
      .space-4
      .form-group
        %label.col-sm-3.control-label.no-padding-right Donation Type
        .col-sm-9
          .control-group
            .radio
              %label
                = f.radio_button :donation_type, 1, checked: true, class: 'ace'
                %span.lbl For Center
              %label
                = f.radio_button :donation_type, 2, class: 'ace'
                %span.lbl For Food for Hungry
      .space-4
      .form-group
        %label.col-sm-3.control-label.no-padding-right Center
        .col-sm-9
          = select_tag 'center', options_from_collection_for_select(@centers, :id, :location), class: 'col-xs-3 margin-right-10', name: 'donation[center_id]',  prompt: '--Please select--'
      .form-group
        %label.col-sm-3.control-label.no-padding-right Amount (&#x20B9;)
        .col-sm-9
          = f.text_field :amount, class: 'col-xs-3 margin-right-10 text-align-r'
      .form-group
        %label.col-sm-3.control-label.no-padding-right Description
        .col-sm-9
          = f.text_area :description, rows: 4, class: text_field_class
      .form-group
        %label.col-sm-3.control-label.no-padding-right Received On
        .col-sm-3
          .input-group
            = f.text_field :received_on, placeholder: 'dd/mm/yyyy', class: 'form-control date-picker', id: 'id-date-picker-1', value: date_formatted(Date.today)
            %span.input-group-addon
              %i.icon-calendar.bigger-110
      .form-group
        %label.col-xs-3.col-sm-3.control-label.no-padding-right
        .col-xs-8
          = submit_tag t('instructor.caption.button.save'), class: 'btn btn-primary btn-sm', title: t('instructor.caption.button.save')
          = link_to('Cancel',donations_path , class: "btn btn-sm btn-grey btn-primary btn-primary", title: 'Cancel')

= form_for @donation, html: { class: 'form-horizontal', role: 'form'} do |f|
  = hidden_field_tag 'donation[received_by_user_id]', current_user.id
  .row
    .col-xs-12.col-sm-12
      .form-group
        %label.col-xs-3.col-sm-3.control-label.no-padding-right
        .col-sm-9
          = render partial: "shared/error_messages", locals: { target: @donation }
  .row
    .col-xs-12
      .form-group
        %label.col-xs-3.col-sm-3.control-label.no-padding-right Donar Name
        .col-sm-9
          = f.text_field :donar_name, class: 'col-xs-6 margin-right-10'
      .form-group
        %label.col-sm-3.control-label.no-padding-right Donar Email
        .col-sm-9
          = f.text_field :donar_email, class: 'col-xs-6 margin-right-10'
      .space-4
      .form-group
        %label.col-sm-3.control-label.no-padding-right Donation Type
        .col-sm-9
          .control-group
            .radio
              %label
                = f.radio_button :donation_type, 1, checked: true, class: 'ace'
                %span.lbl For Center
              %label
                = f.radio_button :donation_type, 2, class: 'ace'
                %span.lbl For Food for Hungry
      .form-group
        %label.col-sm-3.control-label.no-padding-right Amount (&#x20B9;)
        .col-sm-9
          = f.text_field :amount, class: 'col-xs-6 margin-right-10'
      .form-group
        %label.col-sm-3.control-label.no-padding-right Description
        .col-sm-9
          = f.text_area :description, rows: 4, class: 'col-xs-6 margin-right-10'
      .form-group
        %label.col-xs-3.col-sm-3.control-label.no-padding-right
        .col-xs-8
          = submit_tag t('button.save'), class: "btn btn-primary btn-sm", title: t('button.save')
          = link_to('Cancel',donations_path , class: "btn btn-sm btn-grey btn-primary btn-primary", title: 'Cancel')
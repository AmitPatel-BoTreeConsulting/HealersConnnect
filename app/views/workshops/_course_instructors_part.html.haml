- workshop_instructor = @workshop.present? ? @workshop.instructor_id : ''
- workshop_assistant_instructor = @workshop.present? ? @workshop.assistant_instructor_id : ''
.form-group
  %label.col-sm-3.control-label.no-padding-right #{t('workshop.caption.instructor')}
  .col-sm-9
    = select_tag 'workshop[instructor_id]', options_from_collection_for_select(@instructors, :id, :name, workshop_instructor),
    class: 'col-xs-10 col-sm-5',
    prompt: prompt_msg

.form-group
  %label.col-sm-3.control-label.no-padding-right #{t('workshop.caption.assistant_instructor')}
  .col-sm-9
    = select_tag 'workshop[assistant_instructor_id]', options_from_collection_for_select(@instructors, :id, :name,  workshop_assistant_instructor),
    class: 'col-xs-10 col-sm-5',
    prompt: prompt_msg

.table-responsive
  %table.table.table-striped.table-bordered.table-hover#WorkshopRegistrationTable
    %thead
      %tr
        %th.text-center{width: '12%'}  #{t('common.caption.start_date')}
        %th.text-center{width: '12%'}  #{t('common.caption.end_date')}
        %th{width: '25%'} #{t('common.caption.event')}
        %th.text-center{width: '15%'} #{t('common.caption.instructor')}
        %th.text-center #{t('common.caption.center_location')}
        %th.text-center{width: '10%'} #{t('common.caption.view')}
    - event_schedules.each do |event_schedule|
      %tr.info
        %td.text-center{title: time_formatted(event_schedule.start_date)}<
          = date_formatted(event_schedule.start_date) rescue nil
        %td.text-center{title: time_formatted(event_schedule.start_date)}
          = date_formatted(event_schedule.end_date) rescue nil
        %td<
          = event_schedule.event.name
        %td
          = event_schedule.instructor.name
        %td<
          = event_schedule.location
        %td.text-center<
          = link_to(t('common.caption.view'), event_detail_path(event_schedule), class: 'green', title: t('common.caption.view'))
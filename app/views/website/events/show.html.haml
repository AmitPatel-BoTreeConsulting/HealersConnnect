- event = @event_schedule.event
#blog_post.home_course_content_margin
  .container
    .section_header
      %h3= event.name
    .row
      .col-xs-12
        .table-responsive
          %table.table.table-striped.table-bordered.table-hover#WorkshopRegistrationTable
            %thead
              %tr
                %th.text-center #{t('common.caption.start_date')}
                %th.text-center #{t('common.caption.end_date')}
                -#%th #{t('common.caption.instructor')}
                %th.text-center #{t('common.caption.center')}
                -#%th.text-center #{t('common.caption.register')}
              %tr.info
                %td.text-center<
                  = date_formatted(@event_schedule.start_date) rescue nil
                %td.text-center<
                  = date_formatted(@event_schedule.end_date) rescue nil
                %td<
                  = @event_schedule.center.name

    .row
      .col-sm-8
        - if event.avatar.present?
          = image_tag(website_event_image_path(style: :medium, id: event.id, filename: event.avatar_file_name), class: 'post_pic img-responsive')
        .post_content
          %p
            = simple_format(event.description)
          %p
            %b Note:
            = simple_format(@event_schedule.notes)

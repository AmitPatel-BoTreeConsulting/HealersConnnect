%tr.info
  %td<
    = serial_number(@page,event_counter)
  %td<
    = link_to event.name, edit_event_path(event)
  %td<
    = event.event_category.name if event.event_category.present?
  %td<
    = event.description
  %td.text-center<
    .visible-md.visible-lg.hidden-sm.hidden-xs.action-buttons
      = link_to(edit_event_path(event), class: 'green', title: t('common.caption.title.edit')) do
        %i.icon-pencil.bigger-130
      = link_to(event_path(event), method: :delete, :confirm=>t('event.message.remove') , class: 'red', title: t('common.caption.delete'))  do
        %i.icon-trash.bigger-130

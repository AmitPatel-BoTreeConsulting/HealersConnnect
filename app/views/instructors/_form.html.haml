= form_for @instructor, html: { class: 'form-horizontal', role: 'form'} do |f|
  .row
    .col-xs-12.col-sm-12
      .center
        = render partial: "shared/error_messages", locals: { target: f.object }
  .row
    .col-xs-12
      .form-group
        %label.col-sm-3.control-label.no-padding-right Name
        .col-sm-9
          = f.text_field :name, placeholder: 'Name', class: 'col-xs-10 col-sm-5'
      .space-4
      .form-group
        %label.col-sm-3.control-label.no-padding-right Email
        .col-sm-9
          = f.email_field :email, class: 'col-xs-10 col-sm-5'
      .space-4
      .form-group
        %label.col-sm-3.control-label.no-padding-right Mobile
        .col-sm-9
          = f.telephone_field :mobile, class: 'col-xs-10 col-sm-5'
      .clearfix
        .col-md-offset-3.col-md-9
          = f.submit instructor_submit_button, class: 'btn btn-primary'
          = f.submit t('instructor.caption.button.reset'), type: 'reset', class: 'btn'
          = link_to t('instructor.caption.button.cancel'), instructors_path, class: 'btn'
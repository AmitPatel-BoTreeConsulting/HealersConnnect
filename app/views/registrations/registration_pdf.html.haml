- gender =  @profile.gender == 'M' ? 'Male' : 'Female'
- marital_status = @profile.marital_status ? 'Married' : 'Unmarried'
- workshop_alias = @registration.workshop.course.alias
- @other_course = @registration.other_details.other_healing_course.present? ? 'Yes' : 'No'
- @limit_your_practice = @registration.other_details.limit_to_pranic_healing.present? ? 'Yes' : 'No'
- serious_illness = @registration.other_details.serious_illness.present? ? 'Yes' : 'No'
!!!
%html
  %head
    %meta{'http-equiv' => 'Content-Type', content: 'text/html; charset=utf-8'}
    = wicked_pdf_stylesheet_link_tag 'pdf/ace.min'
    = wicked_pdf_stylesheet_link_tag 'pdf/bootstrap'
    = wicked_pdf_stylesheet_link_tag 'pdf/custom'
  %body
    #wrap
      %header
      %main{role: 'main'}
        .main-container
          .main-container-inner
            .main-content
              .page-content
                - if workshop_alias == 'BPH' || workshop_alias == 'APH'
                  = render partial: 'registrations/basic_advance_form_header.html.haml'
                - else
                  = render partial: 'registrations/other_form_header.html.haml'
                .space-28
                .row
                  .col-xs-12
                    %h3
                      %b= t('registration.caption.pdf.name_of_course')
                      %b= @registration.workshop.course.name
                .space-28
                - # uncomment when enabling workshop
                .row
                  .col-xs-8
                    .form-group
                      %label.h4
                        %b= t('registration.caption.pdf.trainer')
                      %label.h4= @registration.workshop.instructor.name.capitalize
                  .col-xs-4
                    .form-group.pull-left
                      %label.h4
                        %b= t('registration.caption.pdf.certificate_number')
                      %label.h4= @registration.certificate_number
                .row
                  .col-xs-8
                    .form-group
                      %label.h4
                        %b= t('registration.caption.pdf.name')
                      %label.h4= @profile.name.titleize
                  .col-xs-4
                    .form-group
                      %label.h4
                        %b= t('registration.caption.pdf.date_of_birth')
                      %label.h4= @profile.birth_date.strftime(Settings.defaults.date_format_in_views)
                .row
                  .col-xs-8
                    .form-group.text-left
                      %label.h4
                        %b= t('registration.caption.pdf.gender')
                      %label.h4= gender
                  .col-xs-4
                    .form-group.pull-left
                      %label.h4
                        %b= t('registration.caption.pdf.marital_status')
                      %label.h4= marital_status
                .row
                  .col-xs-8
                    .form-group
                      %label.h4
                        %b= t('registration.caption.pdf.education_qualification')
                      %label.h4= @profile.education
                  .col-xs-4
                    .form-group.pull-left
                      %label.h4
                        %b= t('registration.caption.pdf.occupation')
                      %label.h4= @profile.occupation
                .row
                  .col-xs-12
                    .form-group
                      %label.h4
                        %b= t('registration.caption.pdf.resident_address')
                      %br/
                      %label.h4= simple_format(@profile.address)
                .row
                  .col-xs-8
                    .form-group
                      %label.h4
                        %b= t('registration.caption.pdf.mobile')
                      %label.h4= @profile.mobile
                  .col-xs-4
                    .form-group.pull-left
                      %label.h4
                        %b= t('registration.caption.pdf.res_or_office_tel')
                      %label.h4= @profile.telephone
                .row
                  .col-xs-12
                    .form-group
                      %label.h4
                        %b= t('registration.caption.pdf.email')
                      %label.h4= @profile.email
                - if workshop_alias == 'APH'
                  = render partial: 'registrations/advance_form_content.html.haml'
                - elsif workshop_alias == 'BPH'
                  .row
                    .col-xs-12
                      .form-group
                        %label.h4
                          %b Other Healing-related Courses taken - Please give details:
                        %label.h4= @registration.other_details.other_healing_course if @registration.other_details.other_healing_course.present?
                - if workshop_alias == 'APH' || workshop_alias == 'BPH'
                  .row
                    .col-xs-12
                      .form-group
                        %label.h4
                          %b Please indicate if you have any of the following
                        %label.h4
                          - [:arthritis, :rheumatism, :hypertension, :heart, :kidney, :liver ].each do |ailment|
                            - flag = @registration.other_details.send(ailment).present? ? "Yes" : "No"
                            = I18n.t("registration.caption.basic.ailments.#{ailment}") + " : #{flag}"
                  .row
                    .col-xs-12
                      .form-group
                        %label.h4
                          %b Have you ever had any serious physical or psychological illness? :
                        %label.h4= serious_illness
                  - if serious_illness == 'Yes'
                    .row
                      .col-xs-12
                        .form-group
                          %label.h4
                            %b If 'Yes',please specify and indicate present status :
                          %label.h4= @registration.other_details.serious_illness
                  .row
                    .col-xs-12
                      - if workshop_alias == 'APH'
                        %p{style: 'font-size: 19px;'} I hereby declare thay all information I have provided in this paper is true and complete. I also declare that I am mentally and physically able to participate in this course and will keep confidentially of the proceedings. I am participating in the Pranic Healing Course and workshop at my risk and my own will, and take full responsibility for participating on this program. I release all Instructors, Organizers and Assistants of this course and Pranic Healing Gyan Prachar Kendra and World Pranic Healing Foundation/India Pvt. Ltd. from all damages whatever and waive all rights for compensation in case of injury.
                      - elsif workshop_alias == 'BPH'
                        %p{style: 'font-size: 19px;'} I hereby declare that all information I have given above is true and complete. I am participating in the Pranic Healing Course and workshop at my risk and my own will, and take full responsibility for participating in this programme.
                        %p{style: 'font-size: 19px;'} I release all Instructors, Organizers/Assistants of this course, Pranic Healing Gyan Kendra and World Pranic Healing Foundation from all damages whatsoever and waive all rights for compensation in case of injury.
                        %p{style: 'font-size: 19px;'} I declare that I am mentally and physically able to participate in this course and will keep confidentiality of the proceedings. I also confirm that information contained in this may be made available to World Pranic Healing Foundation.

                - # uncomment when enabling Workshop
                - if false
                  .row
                    .col-xs-12
                      .form-group
                        %label.h4
                          %b= t('registration.caption.pdf.details_of_course')
                        %table{border: '1', style: 'width: 100%;'}
                          %thead
                            %tr{style: 'height: 30px;'}
                              %th.h4.text-center
                                %b= t('registration.caption.pdf.course')
                              %th.h4.text-center
                                %b= t('registration.caption.pdf.place_conducted')
                              %th.h4.text-center
                                %b= t('registration.caption.pdf.year_and_date')
                              %th.h4.text-center
                                %b= t('registration.caption.pdf.trainer')
                          %tbody
                            %tr{style: 'height: 30px;'}
                              %td.h4.text-center<
                                = t('registration.caption.pdf.basic_pranic_healing')
                              %td.h4.text-center<
                                = workshop.workshop_place.capitalize
                              %td.h4.text-center<
                                = workshop.workshop_dated
                              %td.h4.text-center<
                                = workshop.workshop_instructor.capitalize
                -#.row
                  .col-xs-12
                    %h3.text-center
                      %u
                        %b= t('registration.caption.pdf.declaration')
                -#.row
                  .col-xs-12
                    %p{style: 'font-size: 19px;'} #{t('registration.caption.pdf.text_paragraph_1')}
                    %p{style: 'font-size: 19px;'} #{t('registration.caption.pdf.text_paragraph_2')}
                    %p{style: 'font-size: 19px;'} #{t('registration.caption.pdf.text_paragraph_3')}
                -#.space-20
                .row
                  .col-xs-8
                    .form-group
                      %label.h4
                        %b= t('registration.caption.pdf.date')
                .row
                  .col-xs-8
                    .form-group
                      %label.h4
                        %b= t('registration.caption.pdf.vanue')
                        = t('registration.caption.pdf.vanue_name')
                  .col-xs-4
                    .form-group
                      %label.h4
                        %b= t('registration.caption.pdf.signature')

.page-header
  %h1
    = t('event.caption.event_schedule')
.row
  .col-xs-12
    .btn-group.pull-right.margin-bottom-10
      = link_to t('event_shecdule.caption.button.new'), new_event_schedule_path, class: 'btn btn-sm btn-success', title: t('event_shecdule.caption.button.new')
.row
  .space-6
  .col-xs-12
    .table-responsive
      %table.table.table-striped.table-bordered.table-hover
        %thead
          %tr
            %th #{t('event_shecdule.caption.event')}
            %th #{t('event_shecdule.caption.center')}
            %th #{t('common.caption.start_date')}
            %th.text-center #{t('common.caption.end_date')}
            %th.text-center #{t('common.caption.contact')}
            %th.text-center #{t('course.caption.donation')} (&#x20B9;)
            %th.text-center #{t('common.caption.manage')}
        - if @event_schedules.present?
          = render :partial => 'event_schedules', collection: @event_schedules, as: :event_schedule
        - else
          %tr
            %td{colspan: 7}
              .text-center
                %h3
                  = t('event_schedule.message.no_event_schedules_found')